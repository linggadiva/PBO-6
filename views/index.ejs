<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD - Hasil Tangkapan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<style>
    * {
        box-sizing: border-box;
        margin: 3px;
        padding: 5px;
      }

    h1 {
        text-align: center;
        border-radius: 10px;
    }
    
    main {
        display: flex;
        margin: 10px;
    }
    
    .daftartble {
        flex: 1; 
        margin-right: 50px; 
    }
    
    .daftartble table {
        width: 100%;
        padding: 20px; 
    }

    .daftartble table, th, tr {
        text-align: center;
    }

    body form {
        width: 45%;
        border: 1px;
        border-radius: 10px;
    }

    body form div {
        text-align: justify;
    }
    
</style>

<body class="p-3 mb-2 bg-transparent text-body">
    <h1 class="text-bg-dark p-3">Daftar Ikan Hasil Tangkapan</h1><br>
    <main>
    <div class="daftartble">
    <table class="table table-hover">
        <tr>
            <th class="text-bg-warning p-3">ID</th>
            <th class="text-bg-warning p-3">Nama</th>
            <th class="text-bg-warning p-3">Berat (KG)</th>
            <th class="text-bg-warning p-3">Waktu Ditangkap</th>
            <th class="text-bg-warning p-3">Opsi</th>
        </tr>
        <% ikan.forEach(data => { %>
        <tr>
            <td><%= data.id%></td>
            <td><%= data.nama%></td>
            <td><%= data.berat%></td>
            <td><%= data.wtangkap%></td>
            <td>
                <a href="/edit/<%= data.id%>" class="link-success">Edit</a>
                <a href="/delete/<%= data.id%>" class="link-danger" onclick="return confirm('Apakah Anda yakin ingin menghapus data ini?')">Hapus</a>
            </td>
        </tr>
        <% }) %>
    </table>
    </div>

    <form action="/add" method="post" class="text-bg-warning p-3" onsubmit="alert('Data berhasil ditambahkan!')">
        <div class="row mb-3">
            <h2>Input Data Baru</h2>
                <label for="nama" class="col-sm-2 col-form-label">Nama</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="nama" name="nama" required>
                </div>
        </div>
        <div class="row mb-3">
                <label for="berat" class="col-sm-2 col-form-label">Berat</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="berat" name="berat">
                </div>
        </div>
        <div class="row mb-3">
                <label for="wtangkap" class="col-sm-2 col-form-label">Waktu</label>
                <div class="col-sm-10">
                    <input type="datetime-local" class="form-control" id="wtangkap" name="wtangkap">
                </div>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Tambah</button>
        </div>
    </form>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>